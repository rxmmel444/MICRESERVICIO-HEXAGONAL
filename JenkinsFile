pipeline {
    agent any

    stages {
        stage('Clonar c√≥digo') {
            steps {
                git 'https://github.com/tuusuario/tu-repo.git'
            }
        }

        stage('Levantar servicios') {
            steps {
                sh 'docker-compose down || true'
                sh 'docker-compose up -d --build'
            }
        }

        stage('Esperar servicio') {
            steps {
                sh 'sleep 15'
            }
        }

        stage('Verificar salud del microservicio') {
            steps {
                sh 'curl http://localhost:8080/actuator/health || true'
            }
        }

        stage('Finalizar') {
            steps {
                sh 'docker-compose down'
            }
        }
    }
}
